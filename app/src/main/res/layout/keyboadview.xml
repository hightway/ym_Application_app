<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:background="@color/new_black"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/dropdownLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/key_board_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@mipmap/icon_arrow_dropdown" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:stretchColumns="0,1,2">

        <TableRow
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button01"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="1"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button02"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="2"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button03"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="3"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button04"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="4"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button05"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="5"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button06"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="6"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button07"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="7"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button08"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="8"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button09"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="9"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:divider="@drawable/divider_keyboard_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click_dark"
                android:text="."
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:enabled="false"
                android:clickable="false"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/button00"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:text="0"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RelativeLayout
                android:id="@+id/buttonCross"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/del_txt" />

            </RelativeLayout>

            <!--<ImageView
                android:id="@+id/buttonCross"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:background="@drawable/selector_keyboard_click"
                android:scaleType="centerInside"
                android:src="@mipmap/del_txt"
                android:layout_margin="4dp" />-->

        </TableRow>
    </TableLayout>
</LinearLayout>