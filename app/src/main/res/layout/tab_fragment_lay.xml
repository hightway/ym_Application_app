<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    xmlns:ywl="http://schemas.android.com/apk/res-auto">

    <com.example.myapplication.custom.DownLoadProgressbar
        android:id="@+id/dp_game_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        ywl:dptextsize="14sp" />

    <TextView
        android:id="@+id/tx_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传文件"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize18"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/tx_upload_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传视频"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize18"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tx_upload"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



    <!--<hollowsoft.slidingdrawer.SlidingDrawer-->
    <!--allowSingleTap：指示是否可以通过handle打开或关闭-->
    <com.example.myapplication.custom.WrapSlidingDrawer
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout:content="@+id/content"
        app:allowSingleTap="false"
        layout:handle="@+id/handle">

        <TextView
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#122631"
            android:gravity="center"
            android:text="Handle"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.example.myapplication.custom.SmartScrollView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1200dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="body"
                    android:layout_marginTop="30dp"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1200dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="body2"
                    android:layout_marginTop="30dp"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.example.myapplication.custom.SmartScrollView>

    </com.example.myapplication.custom.WrapSlidingDrawer>


</androidx.constraintlayout.widget.ConstraintLayout>