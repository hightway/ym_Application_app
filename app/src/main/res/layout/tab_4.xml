<LinearLayout class="androidx.appcompat.app.AlertController$RecycleListView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_dark">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp">

        <ImageView
            android:id="@+id/img_msg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/my_icon_2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/my_icon_1"
            android:layout_toLeftOf="@+id/img_msg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/user_account"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>




    <RelativeLayout
        android:id="@+id/rel_search_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tx_unlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="退出登录"
            android:textStyle="bold"
            android:textColor="@color/gray_del"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/tx_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="去登录Go"
            android:textStyle="bold"
            android:textColor="@color/gray_del"
            android:textSize="@dimen/textsize16"
            android:visibility="gone"/>

    </RelativeLayout>


    <com.yinglan.scrolllayout.ScrollLayout
        android:id="@+id/scroll_down_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:allowHorizontalScroll="false"
        app:isSupportExit="true"
        android:visibility="gone">

        <com.yinglan.scrolllayout.content.ContentScrollView
            android:id="@+id/content_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tx_top"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:background="@color/transparent"
                    android:textColor="@color/gray_del"
                    android:textSize="@dimen/textsize16" />


                <TextView
                    android:id="@+id/tx_code"
                    android:layout_width="match_parent"
                    android:layout_height="1200dp"
                    android:background="@color/red3"
                    android:layout_below="@+id/tx_top"
                    android:gravity="center"
                    android:text="是当时的时代"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize18" />

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_below="@+id/tx_top"
                    android:text="点击或上滑打开"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize16" />

            </RelativeLayout>

        </com.yinglan.scrolllayout.content.ContentScrollView>

    </com.yinglan.scrolllayout.ScrollLayout>

</LinearLayout>