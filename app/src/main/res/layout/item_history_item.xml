<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_bg"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/textsize16" />

            <!--<TextView
                android:id="@+id/txt_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:text="治愈"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:background="@drawable/tab_bg"
                android:layout_marginTop="8dp"
                android:textColor="@color/radio_cocle"
                android:textSize="@dimen/textsize10" />-->

            <LinearLayout
                android:id="@+id/lin_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lin_tag"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <com.example.myapplication.custom.ImageRound
                    android:id="@+id/img_avatar"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:id="@+id/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/radio_cocle"
                    android:layout_marginLeft="6dp"
                    android:textSize="@dimen/textsize11" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>